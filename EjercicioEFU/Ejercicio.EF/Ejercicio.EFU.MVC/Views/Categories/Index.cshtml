@model List<Ejercicio.EFU.MVC.Models.CategoriesViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Categorias de productos</h2>
@if (TempData.Peek("ErrorMessage") != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">CategoryName</th>
            <th scope="col">Description</th>
            <th scope="col">Eliminar</th>
            <th scope="col">Editar</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var category in Model)
        {
            <tr>
                <td>
                    @category.Id
                </td>
                <td>
                    @category.CategoryName
                </td>
                <td>
                    @category.Description
                </td>
                <td>
                    @if (category.CategoriaTieneProductos)
                    {
                        <span class="text-danger">@TempData["ErrorMessage"]</span>
                    }
                    else
                    {
                        @Html.ActionLink("Eliminar", "Eliminar", new { id = category.Id }, new { @class = "btn btn-danger", onclick = "return confirm('¿Estás seguro de que deseas eliminar esta categoría?')" })
                    }
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = category.Id }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Agregar", "Agregar", null, new { @class = "btn btn-success" })
</div>